<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageview_recycler_newspager"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/title_recycler_newspager"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        app:layout_constraintLeft_toRightOf="@+id/imageview_recycler_newspager"
        app:layout_constraintTop_toTopOf="@+id/imageview_recycler_newspager"
        android:textSize="20sp"
        android:textStyle="bold"
        android:lines="2"/>
    <TextView
        android:id="@+id/date_recycler_newspager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        app:layout_constraintBottom_toBottomOf="@+id/imageview_recycler_newspager"
        app:layout_constraintLeft_toRightOf="@+id/imageview_recycler_newspager"
        android:layout_marginLeft="10dp"/>
</android.support.constraint.ConstraintLayout>